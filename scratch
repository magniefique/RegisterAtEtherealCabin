const region_select = document.getElementById("region");

const city_select = document.getElementById("city");

const city_list = [
                    "Caloocan",
                    "Las Piñas",
                    "Makati",
                    "Malabon",
                    "Mandaluyong",
                    "Manila",
                    "Marikina",
                    "Muntinlupa",
                    "Navotas",
                    "Parañaque",
                    "Pasay",
                    "Pasig",
                    "Quezon",
                    "San Juan",
                    "Taguig",
                    "Valenzuela"
]

function append(el){
    let opt = document.createElement("option");
    opt.value = el;
    opt.innerHTML = el;
    city_select.append(opt);
}

function updateCity(){
    const region_val = document.getElementById("region").value;
    while (city_select.lastChild.id !== "default"){
        city_select.removeChild(city_select.lastChild);
    }

    if(region_val == "Metro Manila"){
        city_list.forEach((el) => append(el));
    }
}